<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="flex justify-end">
        <a class="bg-red-500 rounded-md px-3 py-2 text-sm" href="/logout"
          >Logout</a
        >
      </div>
      <h3 class="text-3xl">Hello, <%= user.name %> ğŸ‘‹ğŸ»</h3>
      <h5 class="mb-5">you can create a post.</h5>
      <form action="/post" method="post">
        <textarea
          placeholder="What's on your mind?"
          class="block p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
          name="content"
        ></textarea>
        <input
          class="block px-3 w-36 py-2 bg-blue-500 rounded-md mt-2"
          type="submit"
          value="Create New Post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts.</h3>
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach(function(post) { %>
          <div
            class="post w-1/3 p-4 mb-2 border-[1px] border-zinc-800 bg-zinc-700 rounded-md"
          >
            <h4 class="text-blue-500 mb-2"><%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-2 inline-block"><%= post.likes.length %></small>
            <div class="btns flex gap-4 mt-1">
              <a class="text-blue-500" href="/like/<%= post._id %>"
                ><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"
                %></a
              >
              <a class="text-gray-400" href="/edit/<%= post._id %>">edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
